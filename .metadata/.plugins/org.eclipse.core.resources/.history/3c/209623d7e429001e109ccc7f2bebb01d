class Person{
	private String name;
	private char gender;
	private int age;
//	Person(){
//		System.out.println("Person() ctor....");
//	}
	Person(String name, char gender, int age){
		if(name.matches("^[a-zA-Z]*$")) {
			this.name=name;
		}
		else {
			Runtime NameExcErr=new Runtime();
			throw NameExcErr;
		}
		
		if(gender=='M' || gender=='F') {
			this.gender=gender;
		}
		else {
			Runtime GenderExcErr=new Runtime();
			throw GenderExcErr;
		}
		
		if(age>=1 || age<=120) {
			this.age=age;
		}
		else {
			Runtime AgeExcErr=new Runtime();
			throw AgeExcErr;
		}
	}
	void show() {
		System.out.println("Name : "+this.name);
		System.out.println("Gender : "+this.gender);
		System.out.println("Age : "+this.age);
	}
	
}

class Student extends Person{
	private int rollNo;
	private String collegeName;
	private String stream;
//	Student(){
